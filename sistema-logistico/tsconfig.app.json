{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["node"],
    "composite": true,
    "noEmit": false
  },
  // --- CORREÇÃO APLICADA AQUI ---
  // A propriedade "files" foi removida e "include" foi ajustado
  // para garantir que todos os arquivos .ts e .tsx na pasta 'src' sejam incluídos.
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"]
}
