{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["node"],
    "composite": true,
    "noEmit": false,
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,

    "resolveJsonModule": true, // <--- ADICIONE ESTA LINHA

    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  // --- CORREÇÃO APLICADA AQUI ---
  // A propriedade "files" foi removida e "include" foi ajustado
  // para garantir que todos os arquivos .ts e .tsx na pasta 'src' sejam incluídos.
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/**/*.d.ts"]
}
